pkgname="qnx-base"
pkgver=8.0.3
pkgrel=0
pkgdesc="QNX build support files for various build systems"
url="https://qnx.com"
arch="all"
license="Proprietary"
options="!strip"
depends="qnx-microkernel qnx-gcc-libs apk-tools nproc busybox busybox-utils"
source="profile"

package() {
    install -Dm644 "$srcdir"/profile "$pkgdir"/etc/profile
}

