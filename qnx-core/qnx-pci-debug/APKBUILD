pkgname="qnx-pci-debug"
pkgver=8.0.3
_pci_debug_version="3.0.0.02005T202411230033L"
pkgrel=2
pkgdesc="QNX PCI Strings module"
url="https://qnx.com"
arch="all"
license="LicenseRef-QDL-Non-Commercial"
options="!strip !check !tracedeps"
depends="qnx-libslog2"
subpackages="$pkgname-dev"
source="pci_debug_$_pci_debug_version.qpkg::$QSC_URL/com.qnx.qnx800.target.pci.debug/$_pci_debug_version/download
"

prepare() {
   for qpkg in *.qpkg; do
        tar xf $qpkg
   done
}

# extglob for trimming out other arch's toolchain
shopt -s extglob
package() {
    mkdir -p "$pkgdir"
    echo $CARCH
    _qarch=$CARCH
    if [[ $CARCH == "aarch64" ]]; then
        export _qarch=aarch64le
    fi

    mkdir -p "$pkgdir"/usr/lib/dll
    echo "Moving arch-specific ($_qarch) libraries"
    cp -r "$srcdir"/target/qnx/$_qarch/lib/dll/pci/* "$pkgdir"/usr/lib/dll
}

dev() {
    default_dev

    amove usr/lib/dll/*.sym
}

sha512sums="
0a25d7b7fc1643001460e81baa88f46810ac66af39cb54b0acacbac7ad56d00ef290062287490793fe7a5480043a84095bc9f5c8efff64afc00f347015a2e414  pci_debug_3.0.0.02005T202411230033L.qpkg
"
